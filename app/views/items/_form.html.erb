<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :category, collection: Item::CATEGORIES, include_blank: false %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :size, collection: Item::SIZES, include_blank: false %>
    <%= f.input :price %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :address %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
